FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_NO_CACHE_DIR=1

# Node.js (Claude Code CLI için)
RUN apt-get update && apt-get install -y --no-install-recommends \
      curl ca-certificates gnupg && \
    rm -rf /var/lib/apt/lists/* && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get update && apt-get install -y --no-install-recommends nodejs && \
    rm -rf /var/lib/apt/lists/*

# Claude Code CLI (SDK modunun bağımlılığı)
RUN npm i -g @anthropic-ai/claude-code

# ccproxy server (PyPI)
RUN pip install --no-cache-dir "ccproxy-api==0.1.5"

# Çalışma dizini ve start script
WORKDIR /app
COPY start.sh /app/start.sh
RUN chmod +x /app/start.sh

# Sadece ENTRYPOINT/CMD: bayrak yok. start.sh ENV ile bind eder.
CMD ["/app/start.sh"]
