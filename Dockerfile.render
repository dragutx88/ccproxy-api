FROM python:3.11-slim

# Sistem bağımlılıkları (CLI için node/npm gerekli)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates nodejs npm && \
    rm -rf /var/lib/apt/lists/*

# Claude Code CLI (SDK modu için gerekli)
RUN npm install -g @anthropic-ai/claude-code

# ccproxy-api'yi PyPI'dan kur (kaynak derleme yok, VCS versiyon sorunu yok)
RUN pip install --no-cache-dir ccproxy-api

# Servisi başlat: Render bize $PORT verir; ccproxy bu flag'i destekler
# (ana komutta --host YOK; permission-handler alt komutunda var)
CMD ["sh","-lc","ccproxy --port $PORT --sdk-enable-pool"]
